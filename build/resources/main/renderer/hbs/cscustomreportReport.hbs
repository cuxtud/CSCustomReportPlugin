<style>
    .custom-heading {
        font-weight:bold!important;
        margin-bottom:15px;
    }
    .custom-footer {
        font-weight:bold;
    }

    .custom-label {
        font-size: 1rem;
    }
    .custom-border-bottom {
        border-bottom: 1px solid #999999;
    }

    #cs-vm-financial h2 {
        border-bottom: 1px solid #ddd;
        margin: 10px 0 20px;
        padding: 0 0 5px;
    }

    th, td {line-height:32px!important;padding-top:5px;}
</style>

<div id="cs-vm-financial">

    <div class="info">
        <p>Start Date: {{report.header.0.dataMap.startDate}}</p>
        <p>End Date: {{report.header.0.dataMap.endDate}}</p>
    </div>

    <div class="intro-stats">
        <h2>Stats</h2>
        <div class="count-stats">

            <div class="stats-container">
                <span class="big-stat">
                    {{report.header.0.dataMap.instanceCount}}
                </span>
                <span class="stat-label">
                    Instances
                </span>
            </div>
            <div class="stats-container">
                <span class="big-stat">
                    ${{report.header.0.dataMap.totalCost}}
                </span>
                <span class="stat-label">
                    Total Cost
                </span>
            </div>
        </div>
    </div>

    <h2>Vm Financials</h2>

	<div id="report-main">
		<table class="table table-striped custom-border-bottom">
            <thead>
            <th class="custom-heading" style="width:25%">VM Name</th>
			<th class="custom-heading" style="width:25%">VMGuestOS</th>
			<th class="custom-heading" style="width:25%">Cloud</th>
			<th class="custom-heading" style="width:5%">CPU</th>
			<th class="custom-heading" style="width:5%">Memory</th>
			<th class="custom-heading" style="width:5%">Storage(GB)</th>
			<th class="custom-heading" style="width:5%">Cost</th>
            <th class="custom-heading" style="width:5%">Region</th>
            <th class="custom-heading" style="width:5%">Primary Application</th>
            <th class="custom-heading" style="width:5%">ApCID</th>
            <th class="custom-heading" style="width:5%">App Abbreviation</th>
            <th class="custom-heading" style="width:10%;">Platform Service Tier</th>
            <th class="custom-heading" style="width:5%">GBU</th>
            <th class="custom-heading" style="width:5%">Division</th>
            <th class="custom-heading" style="width:5%">Development Team</th>
            <th class="custom-heading" style="width:10%;">Support Owner Email</th>
            <th class="custom-heading" style="width:5%">Site Code</th>
            <th class="custom-heading" style="width:5%">Type</th>
            <th class="custom-heading" style="width:5%">Env</th>
            <th class="custom-heading" style="width:5%">Function</th>
            <th class="custom-heading" style="width:5%">DMZ </th>
            <th class="custom-heading" style="width:5%">Regulation</th>
            </thead>
            <tbody>
            {{#each report.main}}
                <tr>
                    <td>{{dataMap.instanceName}}</td>
                    <td>{{dataMap.guestOs}}</td>
                    <td>{{dataMap.cloud}}</td>
                    <td>{{dataMap.cores}}</td>
                    <td>{{dataMap.memory}}</td>
                    <td>{{dataMap.storage}}</td>
                    <td>{{dataMap.totalCost}}</td>
                    <td>{{dataMap.region}}</td>
                    <td>{{dataMap.primaryApplication}}</td>
                    <td>{{dataMap.aPCID}}</td>
                    <td>{{dataMap.appAbbreviation}}</td>
                    <td>{{dataMap.Platform_Service_Tier}}</td>
                    <td>{{dataMap.gbu}}</td>
                    <td>{{dataMap.division}}</td>
                    <td>{{dataMap.developmentTeam}}</td>
                    <td>{{dataMap.Support_Owner_Email}}</td>
                    <td>{{dataMap.Site_Code}}</td>
                    <td>{{dataMap.tYPE}}</td>
                    <td>{{dataMap.eNV}}</td>
                    <td>{{dataMap.ifUNCTION}}</td>
                    <td>{{dataMap.dMZ}}</td>
                    <td>{{dataMap.rEGULATION}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
	</div>
</div>